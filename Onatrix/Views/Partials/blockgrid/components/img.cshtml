@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.PropertyEditors.ValueConverters;

@{
    var selectedImg = Model?.Content.Value<IPublishedContent>("selectedImg")?.Url() ?? null;
    var selectedImgDescription = Model?.Content.Value<string>("selectedImgDescription") ?? "";
}

@if (!string.IsNullOrEmpty(selectedImg)) {
    <img src="@selectedImg" alt="@selectedImgDescription"/>
}